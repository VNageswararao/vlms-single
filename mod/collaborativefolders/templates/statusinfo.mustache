{{!
    @template mod_collaborativefolders/statusinfo

    Status table that is the intro to user-facing pages of collaborative folder instances.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * creationstatus
    * teachermayaccess
    * groupmode
    * groups

    Example context (json):
    {
        "creationstatus": "created",
        "teachermayaccess": 0,
        "groupmode": 1,
        "groups": [{ "id": 1, "name": "Group 1" }]
    }
}}
<h3>{{#str}}overview, mod_collaborativefolders{{/str}}</h3>
<table class="statusinfo generaltable fullwidth">
    <tbody>
    <tr>
        <th scope="row">{{#str}}teacher_access, mod_collaborativefolders{{/str}}</th>
        <td>
            {{#teachermayaccess}}{{#str}}teacheraccess_yes, mod_collaborativefolders{{/str}}{{/teachermayaccess}}
            {{^teachermayaccess}}{{#str}}teacheraccess_no, mod_collaborativefolders{{/str}}{{/teachermayaccess}}
        </td>
    </tr>
    <tr>
        <th scope="row">{{#str}}groupmode, mod_collaborativefolders{{/str}}</th>
        <td>
            {{#groupmode}}{{#str}}groupmode_on, mod_collaborativefolders{{/str}}{{/groupmode}}
            {{^groupmode}}{{#str}}groupmode_off, mod_collaborativefolders{{/str}}{{/groupmode}}
        </td>
    </tr>
    {{#groupmode}}
        <tr>
            <th scope="row">{{#str}}groups, mod_collaborativefolders{{/str}}</th>
            <td>
                <ul>
                    {{#groups}}
                        <li>{{name}}</li>
                    {{/groups}}
                </ul>
                {{^groups}}
                    {{#str}}nogroups, mod_collaborativefolders{{/str}}
                {{/groups}}
            </td>
        </tr>
    {{/groupmode}}
    </tbody>
</table>